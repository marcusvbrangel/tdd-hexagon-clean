{
  "uid": "retail-store-postgres",
  "title": "Retail Store - Postgres",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": [
    "retail-store"
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "db",
        "label": "Database",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "query": "label_values(pg_stat_database_xact_commit, datname)",
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Postgres up",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_up",
          "refId": "A",
          "instant": false
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ],
          "fields": "",
          "values": false
        }
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Connections",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=~\"$db\"}",
          "refId": "A",
          "instant": false,
          "legendFormat": "{{datname}}"
        }
      ],
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 9,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "TPS commit/rollback",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (datname) (rate(pg_stat_database_xact_commit{datname=~\"$db\"}[5m]))",
          "refId": "A",
          "instant": false,
          "legendFormat": "commit {{datname}}"
        },
        {
          "expr": "sum by (datname) (rate(pg_stat_database_xact_rollback{datname=~\"$db\"}[5m]))",
          "refId": "B",
          "instant": false,
          "legendFormat": "rollback {{datname}}"
        }
      ],
      "gridPos": {
        "x": 15,
        "y": 0,
        "w": 9,
        "h": 6
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Row changes (insert/update/delete)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (datname) (rate(pg_stat_database_tup_inserted{datname=~\"$db\"}[5m]))",
          "refId": "A",
          "instant": false,
          "legendFormat": "insert {{datname}}"
        },
        {
          "expr": "sum by (datname) (rate(pg_stat_database_tup_updated{datname=~\"$db\"}[5m]))",
          "refId": "B",
          "instant": false,
          "legendFormat": "update {{datname}}"
        },
        {
          "expr": "sum by (datname) (rate(pg_stat_database_tup_deleted{datname=~\"$db\"}[5m]))",
          "refId": "C",
          "instant": false,
          "legendFormat": "delete {{datname}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Cache hit ratio (%)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_database_blks_hit{datname=~\"$db\"}[5m])) / (sum(rate(pg_stat_database_blks_hit{datname=~\"$db\"}[5m])) + sum(rate(pg_stat_database_blks_read{datname=~\"$db\"}[5m]))) * 100",
          "refId": "A",
          "instant": false,
          "legendFormat": "hit ratio"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 6,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Deadlocks",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum by (datname) (rate(pg_stat_database_deadlocks{datname=~\"$db\"}[5m]))",
          "refId": "A",
          "instant": false,
          "legendFormat": "{{datname}}"
        }
      ],
      "gridPos": {
        "x": 18,
        "y": 6,
        "w": 6,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    }
  ]
}
