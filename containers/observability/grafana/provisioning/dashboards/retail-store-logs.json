{
  "uid": "retail-store-logs",
  "title": "Retail Store - Logs",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": [
    "retail-store"
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "query": "label_values({job=\"retail-store\"}, service)",
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      },
      {
        "name": "level",
        "label": "Level",
        "type": "query",
        "datasource": {
          "type": "loki",
          "uid": "loki"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "query": "label_values({job=\"retail-store\", service=~\"$service\"}, level)",
        "current": {
          "text": "All",
          "value": [
            "$__all"
          ]
        }
      }
    ]
  },
  "panels": [
    {
      "id": 4,
      "type": "logs",
      "title": "Quick logs (all services)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"retail-store\"} | json | level=~\"$level\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 24,
        "h": 6
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true
      }
    },
    {
      "id": 1,
      "type": "logs",
      "title": "Service logs",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "{job=\"retail-store\", service=~\"$service\"} | json | level=~\"$level\"",
          "refId": "A"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 24,
        "h": 10
      },
      "options": {
        "showTime": true,
        "wrapLogMessage": true
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Log volume (events/sec)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"retail-store\", service=~\"$service\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{service}}"
        }
      ],
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Error logs (events/sec)",
      "datasource": {
        "type": "loki",
        "uid": "loki"
      },
      "targets": [
        {
          "expr": "sum by (service) (rate({job=\"retail-store\", service=~\"$service\", level=~\"ERROR|error\"}[5m]))",
          "refId": "A",
          "legendFormat": "{{service}}"
        }
      ],
      "gridPos": {
        "x": 12,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        },
        "stacking": {
          "mode": "none"
        }
      }
    }
  ]
}
