      "targets": [
        {
          "expr": "sum by (topic) (rate(kafka_topic_partition_current_offset{topic=~\"order\\.events\\.v1|inventory\\.events\\.v1|payment\\.events\\.v1\"}[5m]))",
          "refId": "A"
